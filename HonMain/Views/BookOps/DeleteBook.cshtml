@model HonMain.Models.BookDetail

@{
    ViewData["Title"] = "DeleteBook";
}

<h1>DeleteBook</h1>

<h4>BookDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DeleteBook">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
				<input type="hidden" asp-for="Id" />
                <label asp-for="BookName" class="control-label"></label>
                <input asp-for="BookName" class="form-control" readonly/>
                <span asp-validation-for="BookName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <input asp-for="Genre" class="form-control" readonly/>
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="AvailabilityStatus" readonly/> @Html.DisplayNameFor(model => model.AvailabilityStatus)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Delete Book" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

